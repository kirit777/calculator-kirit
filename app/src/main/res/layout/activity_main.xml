<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainL">

    <LinearLayout
        android:id="@+id/devL"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@color/purple_500"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/canselBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cansel"
            app:tint="@color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center_horizontal"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kk" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gareja Kirit"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="garejakirit.ml"
            android:textColor="#3B7DEC"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menul"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/dcard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/themeBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/day"
                app:tint="@color/purple_500"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/developercard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kk" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/al"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/l2"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/atxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black"
            android:paddingRight="20dp"
            android:textSize="30sp"
            android:gravity="end"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:background="@drawable/gd_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/pr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/back1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:src="@drawable/back"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/b7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/b8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/b9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/mult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="30sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/b5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"

                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"

                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"

                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/addi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/b0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>